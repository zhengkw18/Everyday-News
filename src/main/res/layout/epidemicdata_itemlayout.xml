<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/epidemicdata_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorBackground"
    android:clickable="true"
    tools:context=".epidemicData.EpidemicDataActivity">

    <TableLayout
        android:id="@+id/epidemicdata_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:shrinkColumns="0"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/epidemicdata_tablerow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/epidemicdata_region"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/epidemicdata_confirmed"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/epidemicdata_cured"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/epidemicdata_dead"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>
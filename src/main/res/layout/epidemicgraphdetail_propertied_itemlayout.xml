<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/epidemicgraphdetail_properties_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorBackground"
    android:clickable="true"
    tools:context=".epidemicGraphDetail.EpidemicGraphDetailActivity">

    <TableLayout
        android:id="@+id/epidemicgraphdetail_properties_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10pt"
        android:background="@color/colorBackground"
        android:shrinkColumns="0"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/epidemicgraphdetail_properties_tablerow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground">

            <TextView
                android:id="@+id/epidemicgraphdetail_properties_name"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorFont"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/epidemicgraphdetail_properties_content"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/colorGrayFont"
                android:textSize="15sp" />
        </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>